<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewTransactionDate"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="21 мая 2024"
        android:textSize="12sp"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/imageViewTransactionIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@android:drawable/btn_radio"
        android:contentDescription="icon"/>

    <TextView
        android:id="@+id/textViewTransactionType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Изменение стоимости"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/textViewTransactionAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$21,000"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"/>

</LinearLayout> 