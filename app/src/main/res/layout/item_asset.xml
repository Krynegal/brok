<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp">

    <TextView
        android:id="@+id/textViewAssetName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:text="First Exam"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageViewAssetIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textViewAssetName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp" />

    <TextView
        android:id="@+id/textViewAssetValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAssetName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/imageViewAssetIcon"
        android:gravity="center"
        android:text="May 23, 2015"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageViewAssetStatus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textViewAssetValue"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp" />

    <TextView
        android:id="@+id/textViewAssetProfit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAssetValue"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/imageViewAssetStatus"
        android:gravity="center"
        android:text="Best Of Luck"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#808080" />

</RelativeLayout>
